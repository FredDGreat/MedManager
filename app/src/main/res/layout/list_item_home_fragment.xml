<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="1dp"
    android:layout_marginTop="4dp"
    card_view:cardElevation="6dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_selector"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="@dimen/pill_icon_width"
            android:layout_height="@dimen/pill_icon_height"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:src="@drawable/ic_pill"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:hint="Name of medication"
                android:textColorHint="#4f87db"
                android:id="@+id/medName"
                android:layout_marginTop="4dp"
                android:textColor="#4f87db"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:hint="Prescription of the medication"
                android:textColorHint="#dd333333"
                android:id="@+id/medDesc"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="4dp"
                android:paddingRight="4dp"
                android:textColor="#dd333333"
                android:layout_alignParentTop="true"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="1dp"
                        android:src="@mipmap/ic_notifications_dark"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/notificationLabel"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:hint="3"
                        android:textColorHint="#dde41313"
                        android:textColor="#dde41313"
                        android:textSize="11sp"
                        android:layout_gravity="center_vertical"
                        android:layout_alignParentTop="true"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="4dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="1dp"
                        android:src="@mipmap/ic_alarm"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/startNEndDate"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:hint="Wed21-Fri24 2018"
                        android:textColorHint="#b0b0b4"
                        android:textColor="#b0b0b4"
                        android:textSize="11sp"
                        android:layout_gravity="center_vertical"
                        android:layout_alignParentTop="true"
                        />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>